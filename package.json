{
  "name": "@sentry/dotagents",
  "version": "0.4.0",
  "description": "Package manager for .agents directories",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dotagents": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint src --deny-warnings",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "oxlint --deny-warnings"
    ]
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "packageManager": "pnpm@10.28.2",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "chalk": "^5.6.2",
    "smol-toml": "^1.6.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.43.0",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "onlyBuiltDependencies": [
    "esbuild",
    "simple-git-hooks"
  ]
}
